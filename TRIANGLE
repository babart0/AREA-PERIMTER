package meyn;

/**
 *
 * @author Student
 */
public class Triangle {
    
        
       public double x;
       public double y;
       public double z;
    
    public Triangle (double x, double y, double z){
    this.x = x; 
    this.y = y;
    this.z = z; 
    }
    public double getPerimeter (){
    return x + y + z;
        
    }
     public float getArea (){
     
    return x * y * 0.5;
    
            }
}
